@model IEnumerable<FinalProjectMvc.Models.Product>

@{
    ViewData["Title"] = "Index";
}

<!-- Products Start -->
<div class="container-fluid pt-5">
    <div class="text-center mb-4">
        <h2 class="section-title px-5"><span class="px-2">Trendy Products</span></h2>
        
        <a asp-action="Create" class="btn btn-primary" style="float: right;">
            <i class="fas fa-plus text-secondary mr-1"></i> Add New Product</a>
        
    </div>
    <div class="row px-xl-5 pb-3">
        @foreach (var item in Model)
        {
            <div class="col-lg-3 col-md-6 col-sm-12 pb-1">
                <div class="card product-item border-0 mb-4">
                    <div class="card-header product-img position-relative overflow-hidden bg-transparent border p-0">
                        @if (!string.IsNullOrEmpty(item.ImageUrl))
                        {
                            <img src="@item.ImageUrl" alt="Thumbnail" class="img-fluid w-100" style="height: 200px;" />
                        }
                        else
                        {
                            <span class="text-muted">No image</span>
                        }
                    </div>
                    <div class="card-body border-left border-right text-center p-0 pt-4 pb-3">
                        <h6 class="text-truncate mb-3">@Html.DisplayFor(modelItem => item.Name)</h6>
                        <div class="d-flex justify-content-center">
                            <h6>@Html.DisplayFor(modelItem => item.Price)</h6>
                        </div>
                    </div>
                    <div class="card-footer d-flex justify-content-between bg-light border">
                        <a class="btn btn-sm text-dark p-0" asp-area="" asp-controller="Product" asp-route-id="@item.Id" asp-action="Details">
                            <i class="fas fa-eye text-primary mr-1"></i> View</a>
                        <a class="btn btn-sm text-dark p-0" asp-area="" asp-controller="Product" asp-route-id="@item.Id" asp-action="Edit">
                            <i class="fas fa-pen text-primary mr-1"></i> Edit</a>
                        <a class="btn btn-sm text-dark p-0" asp-area="" asp-controller="Product" asp-route-id="@item.Id" asp-action="Delete">
                            <i class="fas fa-trash text-primary mr-1"></i> Delete</a>
                    </div>
                    <div class="card-footer d-flex justify-content-between bg-secondary border">
                        @if (item.StockQuantity > 0) {
                            <a><i class="fa-solid fa-check-double text-primary mr-1"></i>In Stock</a>
                        }
                        else {
                            <a><i class="fa-solid fa-ban text-danger mr-1"></i> Out of Stock</a>
                        }
                        <i class="fa-solid fa-star text-primary mr-1"></i>@Html.DisplayFor(modelItem => item.Rating)
                    </div>
                </div>
            </div>

            @* <tr>
                <td>
                    
                </td>
                <td></td>
                <td></td>
                <td>@Html.DisplayFor(modelItem => item.Description)</td>
                <td>@string.Join(", ", item.AvailableSizes ?? new List<string>())</td>
                <td>@string.Join(", ", item.AvailableColors ?? new List<string>())</td>
                <td>@Html.DisplayFor(modelItem => item.StockQuantity)</td>
                <td>@Html.DisplayFor(modelItem => item.Rating)</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr> *@
        }
    </div>
</div>
@model FinalProjectMvc.Models.ReportViewModel

@{
    ViewData["Title"] = "Reports";
}

<div class="container-fluid pt-5">
    <div class="text-center mb-4">
        <h2 class="section-title px-5"><span class="px-2">Reports</span></h2>
    </div>

    <div class="row px-xl-5">
        <!-- Out of Stock -->
        <div class="col-lg-6 mb-4">
            <div class="bg-light p-4 rounded shadow-sm h-100">
                <h5 class="font-weight-semi-bold mb-3 text-primary">Out Of Stock Products</h5>
                <table class="table table-striped table-bordered table-sm mb-0">
                    <thead class="thead-dark">
                        <tr>
                            <th>Name</th>
                            <th>Stock</th>
                        </tr>
                    </thead>
                    <tbody>
                    @foreach (var item in Model.OutOfStockProducts)
                    {
                        <tr>
                            <td>@item.Name</td>
                            <td>@item.StockQuantity</td>
                        </tr>
                    }
                    </tbody>
                </table>
            </div>
        </div>

        <!-- No Reviews -->
        <div class="col-lg-6 mb-4">
            <div class="bg-light p-4 rounded shadow-sm h-100">
                <h5 class="font-weight-semi-bold mb-3 text-primary">Products With No Reviews</h5>
                <table class="table table-striped table-bordered table-sm mb-0">
                    <thead class="thead-dark">
                        <tr>
                            <th>Name</th>
                            <th>Rating</th>
                        </tr>
                    </thead>
                    <tbody>
                    @foreach (var item in Model.ProductsWithNoReviews)
                    {
                        <tr>
                            <td>@item.Name</td>
                            <td>@item.Rating</td>
                        </tr>
                    }
                    </tbody>
                </table>
            </div>
        </div>

        <!-- Most Reviewed -->
        <div class="col-lg-6 mb-4">
            <div class="bg-light p-4 rounded shadow-sm h-100">
                <h5 class="font-weight-semi-bold mb-3 text-primary">Most Reviewed Products</h5>
                <table class="table table-striped table-bordered table-sm mb-0">
                    <thead class="thead-dark">
                        <tr>
                            <th>Name</th>
                            <th>Review Count</th>
                        </tr>
                    </thead>
                    <tbody>
                    @foreach (var item in Model.MostReviewedProducts)
                    {
                        <tr>
                            <td>@item.Name</td>
                            <td>@item.ReviewCount</td>
                        </tr>
                    }
                    </tbody>
                </table>
            </div>
        </div>

        <!-- Top Rated -->
        <div class="col-lg-6 mb-4">
            <div class="bg-light p-4 rounded shadow-sm h-100">
                <h5 class="font-weight-semi-bold mb-3 text-primary">Top Rated Products</h5>
                <table class="table table-striped table-bordered table-sm mb-0">
                    <thead class="thead-dark">
                        <tr>
                            <th>Name</th>
                            <th>Rating</th>
                        </tr>
                    </thead>
                    <tbody>
                    @foreach (var item in Model.TopRatedProducts)
                    {
                        <tr>
                            <td>@item.Name</td>
                            <td>@item.Rating</td>
                        </tr>
                    }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
